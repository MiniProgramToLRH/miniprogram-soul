page {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.about-image {
  width: 100%;
  height: 100%;
}

.about {
  width: 350rpx;
  height: 500rpx;
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 10px#000;
  background: rgba(255, 255, 255, 0.7);
}

.text {
  padding: 15rpx 0
}

.text:nth-child(odd) {
  font-size: 24rpx;
}

.text:nth-child(even) {
  font-size: 30rpx;
  font-weight: 800;
}
